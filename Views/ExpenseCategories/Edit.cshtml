@model Expense_Tracker.Models.ExpenseCategory

@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>ExpenseCategory</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit"
                  data-ajax="true"                  
                  data-ajax-method="POST">
                  
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExpenseCategoryId" />
                <div class="form-group">
                    <label asp-for="ExpenseCategoryName" class="control-label"></label>
                    <input asp-for="ExpenseCategoryName" class="form-control" />
                    <span asp-validation-for="ExpenseCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>


    



</body>
</html>