@model Expense_Tracker.Models.ExpenseCategory


<!DOCTYPE html>




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>

</head>
<body>

    <h4>ExpenseCategory</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">


            <form asp-action="Create" asp-controller="ExpenseCategories"
                  data-ajax="true"
                  enctype="multipart/form-data"
                  data-ajax-method="POST"
                  data-ajax-success="OnSuccessSC"
                  data-ajax-failure="OnFailureSC"
                  data-ajax-begin="OnBeginSC"
                  data-ajax-complete="OnCompleteSC">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ExpenseCategoryName" class="control-label"></label>
                    <input asp-for="ExpenseCategoryName" class="form-control" />
                    <span asp-validation-for="ExpenseCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <script>

        function OnSuccessSC(response) {
            alert("OnSuccess");
        }
        function OnFailureSC(response) {
            alert("OnFailure");
        }

        function OnBeginSC() {
            alert("OnBegin");
        }

        function OnCompleteSC() {
            alert("OnComplete");
        }


    </script>



</body>
</html>